@model GranjaSystem.Models.tblRoles

@{
    ViewBag.Title = "Eliminar Registro";
}
    <div class="row content container-fluid">
        <div class="panel panel-primary">
            <div class="panel-heading text-center"><h4>CONTROL DE ROLES</h4></div>
            <div class="panel-body bg-gray">
                <h5 class="alert alert-danger">¿Estas Seguro de Eliminar el Registro?</h5>
                <div>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Rol)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Rol)
                        </dd>

                        <dt>
                            Descripción
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Descripcion)
                        </dd>

                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                <div class="col-sm-offset-9 col-sm-3" align="right">
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                    @Html.ActionLink("Atras", "Index", null, new { @class = "btn btn-info" })
                </div>
                    }
                </div>
            </div>
        </div>     
    </div>

