@model IEnumerable<GranjaSystem.Models.tblVacunasLotes>

@{
    ViewBag.Title = "Index";
}










<div class="row content container-fluid">
    <p>
        @Html.ActionLink(" ", "Create", null, new { @class = "fa fa-plus btn btn-success btn-lg", title = "Agregar" })

    </p>
    <div class="panel panel-primary">
        <div class="panel-heading text-center"><h4>VACUNA DE LOTES</h4></div>
        <div class="panel-body bg-gray">
            <table class="table table-bordered table-hover">
                <tr>
                    <th>
                        Lote
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaVacuna)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Vacuna)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.tblLotes.NumLote)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaVacuna)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Vacuna)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td>
                            @Html.ActionLink(" ", "Edit", new { id = item.IdVacunaLote }, new { @class = "fa fa-edit btn btn-info", title = "Modificar" })
                            @Html.ActionLink(" ", "Details", new { id = item.IdVacunaLote }, new { @class = "fa fa-eye btn btn-warning", title = "Ver Detalles" })
                            @Html.ActionLink(" ", "Delete", new { id = item.IdVacunaLote }, new { @class = "fa fa-trash btn btn-danger", title = "Eliminar" })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>