
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<link href="~/Content/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/dist/css/AdminLTE.min.css" rel="stylesheet" />
<link href="~/Content/login.css" rel="stylesheet" />

    <div class="login-box">
        <div class="login-logo">
            <img id="profile-img" class="img-responsive" style="padding-left: 10%;padding-right: 10%;" src="~/Content/img/Logo.png" />
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Sistema de Produción de Cerdos</p>
            <div class="@ViewBag.Clase">@ViewBag.Mensaje</div>
            <form action="@Url.Action("Index","Login")" method="post" class="form-signin">
                <div class="input-group">
                    <span class="input-group-addon glyphicon glyphicon-user"></span>
                    <input class="form-control" placeholder="Ingrese Usuario" name="inputUser" required type="text" autofocus autocomplete="off">
                </div>
                <p></p>
                <div class="input-group">
                    <span class="input-group-addon glyphicon glyphicon-lock"></span>
                    <input class="form-control" placeholder="Ingrese Contraseña" name="inputPassword" required type="password" autofocus>
                </div>
                <br />
                <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Iniciar Sesión</button>
            </form><!-- /form -->


        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });
    </script>

