@model GranjaSystem.Models.tblEmpleados

@{
    ViewBag.Title = "Eliminar Registro";
}
    <div class="row content container-fluid">
        <div class="panel panel-primary">
            <div class="panel-heading text-center"><h4>CONTROL DE EMPLEADOS</h4></div>
            <div class="panel-body bg-gray">
                <h5 class="alert alert-danger">¿Estas Seguro de Eliminar el Registro?</h5>
                <div>
                    <dl class="dl-horizontal">
                        <dt>
                            Nombre del Empleado
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.NombreEmpleado)
                        </dd>

                        <dt>
                            Apellido del Empleado
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ApellidoEmpleado)
                        </dd>

                        <dt>
                            Teléfono
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Telefono)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.DUI)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.DUI)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.NIT)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.NIT)
                        </dd>

                        <dt>
                            Fecha de Registro
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.FechaRegistro)
                        </dd>

                        <dt>
                            Fecha de Nacimiento
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.FechaNacimiento)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Email)
                        </dd>

                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="col-sm-offset-9 col-sm-3" align="right">
                            <input type="submit" value="Eliminar" class="btn btn-danger" />
                            @Html.ActionLink("Atras", "Index", null, new { @class = "btn btn-info" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>


