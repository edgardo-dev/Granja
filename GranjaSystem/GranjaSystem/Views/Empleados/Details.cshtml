@model GranjaSystem.Models.tblEmpleados

@{
    ViewBag.Title = "Detalles del Registro";
}
    <div class="row content container-fluid">

        <div class="panel panel-primary">
            <div class="panel-heading text-center"><h4>CONTROL DE EMPLEADOS</h4></div>
            <div class="panel-body bg-gray">
                <dl class="dl-horizontal">
                    <dt>
                        Nombre del Empleado
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NombreEmpleado)
                    </dd>

                    <dt>
                        Apellido del Empleado
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ApellidoEmpleado)
                    </dd>

                    <dt>
                        Teléfono
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Telefono)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.DUI)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.DUI)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.NIT)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NIT)
                    </dd>

                    <dt>
                        Fecha de Registro
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.FechaRegistro)
                    </dd>

                    <dt>
                        Fecha de Nacimiento
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.FechaNacimiento)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Email)
                    </dd>

                </dl>
                <p align="right">
                    @Html.ActionLink("Modificar", "Edit", new { id = Model.IdEmpleado }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Atras", "Index", null, new { @class = "btn btn-success" })
                </p>
            </div>

        </div>

    </div>

